<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil.MainPage"
             Title="Personas">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Buscar por nombre completo"
       FontAttributes="Bold"
       FontSize="18" />

            <Entry x:Name="BuscarEntry"
       Placeholder="Ej. Juan Pérez"
       ClearButtonVisibility="WhileEditing"
       Keyboard="Default" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Buscar"
            BackgroundColor="#007BFF"
            TextColor="White"
            Clicked="Buscar_Clicked" />

                <Button Text="Limpiar"
            BackgroundColor="#DC3545"
            TextColor="White"
            Clicked="Limpiar_Clicked" />
            </HorizontalStackLayout>

            <Label Text="Listado de Personas"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Button Text="➕ Nueva Persona"
                    Clicked="Nuevo_Clicked"
                    BackgroundColor="#28a745"
                    TextColor="White"
                    HorizontalOptions="Fill" />

            <CollectionView x:Name="PersonasList"
                            Margin="0,10"
                            EmptyView="No hay personas registradas.">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="5">
                            <Grid ColumnDefinitions="*, Auto, Auto">
                                <!-- Info: Nombre y Correo -->
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding nombrecompleto}"
                                           FontSize="18"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding correo}"
                                           FontSize="14"
                                           TextColor="Gray" />
                                </VerticalStackLayout>

                                <ImageButton Source="edit.png"
                                 Grid.Column="1"
                                 HeightRequest="30"
                                 WidthRequest="30"
                                 BackgroundColor="Transparent"
                                 Clicked="EditarPersona_Clicked"
                                 CommandParameter="{Binding .}" />

                                <ImageButton Source="delete.png"
                                 Grid.Column="2"
                                 HeightRequest="30"
                                 WidthRequest="30"
                                 BackgroundColor="Transparent"
                                 Clicked="EliminarPersona_Clicked"
                                 CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
